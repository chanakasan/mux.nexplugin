#!/usr/bin/env bash

set -e

main() {
  local a1="$1"
  local fn=_mux_$a1
  if [ -z "$a1" ]; then
    _mux_new
    # tmux-ensure
  elif [[ $(type -t $fn ) == function ]]; then
    $fn "${@:2}"
  else
    _start $a1
  fi
}

_mux_new() {
  local name=$(tmux-new-session-name)
  tmux-aoc $name
}

_mux_ex() {
  local example=$nx_mux_root/src/mux/example.sh
  vi $example
}

_mux_list() {
  tmux list-sessions
}

_mux_desk() {
  local name="desktop"
  local session_exist=$(tmux-session-exist $name)
  if [ "$session_exist" == "true" ]; then
    tmux-attach $name
  else
    tmux-create-desktop
  fi
}

_start() {
  local name="$1"
  sh $nx_mux_root/src/mux/$name.sh
}

main "$@"
